
@{
    ViewBag.Title = "Index";
}
<script src="~/Scripts/angular.js"></script>
<script src="~/Scripts/CustomScripts/Module.js"></script>
<script src="~/Scripts/CustomScripts/Service.js"></script>
<script src="~/Scripts/CustomScripts/Controller.js"></script>
<h2>Product Information</h2>
<div class="container" ng-app="myApp" ng-controller="myController">
    <br />
    <button type="button" class="btn btn-info btn-lg" data-toggle="modal" data-target="#myModal">Add New Product</button>

    <span class="clearfix"></span>
    <hr />
    <div class="alert alert-info" ng-if="message">
        <a href="#" class="close" ng-click="clearMessage()">&times;</a>
        {{message}}
    </div>
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Sl No.</th>
                <th>Product Id</th>
                <th>Product Name</th>
                <th>Price</th>
                <th>Edit</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            <tr ng-repeat="product in Products">
                <td>{{$index+1}}</td>
                <td>{{product.ProductId}}</td>
                <td>{{product.ProductName}}</td>
                <td>{{product.Price}}</td>
                <td><button type="button" data-toggle="modal" data-target="#editModal" class="btn btn-success btn-lg" ng-click="SelectedProduct(product)">Update</button></td>
                <td><button type="button" data-toggle="modal" data-target="#deleteModal" class="btn btn-danger btn-lg" ng-click="SelectedProduct(product)">Delete</button></td>

            </tr>
        </tbody>
    </table>

    <div class="modal fade" id="myModal" role="dialog">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title">Add New Product</h4>
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                </div>
                <div class="modal-body">
                    <form class="form-horizontal">
                        <div class="form-group">
                            <label class="control-label col-sm-4">Product Name</label>
                            <div class="col-sm-8">
                                <input type="text" class="form-control" ng-model="NewProduct.ProductName" />
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="control-label col-sm-4">Price</label>
                            <div class="col-sm-8">
                                <input type="text" class="form-control" ng-model="NewProduct.Price" />
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-sm-offset-2 col-sm-10">
                                <button type="submit" class="btn btn-primary" data-dismiss="modal" ng-click="saveProduct()">Save</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade" id="editModal" role="dialog">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title">Edit Product</h4>
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                </div>
                <div class="modal-body">
                    <form class="form-horizontal">
                        <div class="form-group">
                            <label class="control-label col-sm-4">Product Name</label>
                            <div class="col-sm-8">
                                <input type="text" class="form-control" ng-model="clickedProduct.ProductName" />
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="control-label col-sm-4">Price</label>
                            <div class="col-sm-8">
                                <input type="text" class="form-control" ng-model="clickedProduct.Price" />
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="control-label col-sm-4">Product Id</label>
                            <div class="col-sm-8">
                                <input type="text" class="form-control" ng-model="clickedProduct.ProductId" />
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-sm-offset-2 col-sm-10">
                                <button type="submit" class="btn btn-primary" data-dismiss="modal" ng-click="updateProduct()">Update</button>
                            </div>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade" id="deleteModal" role="dialog">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title">Delete Product</h4>
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                </div>
                <div class="modal-body">
                    <strong style="color:red">Are you want to delete {{clickedProduct.ProductName}}'s information?</strong>
